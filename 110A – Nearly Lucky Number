#include <iostream>
using namespace std;

int main() {
    string num;
    cin >> num;

    int countLucky = 0;

    for (int i = 0; i < num.length(); i++) {
        if (num[i] == '4' || num[i] == '7') {
            countLucky++;
        }
    }

    if (countLucky == 4 || countLucky == 7) {
        cout << "YES";
    } else {
        cout << "NO";
    }

    return 0;
}
