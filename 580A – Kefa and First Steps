#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;

    vector<int> arr(n);
    for (int i = 0; i < n; i++) cin >> arr[i];

    int cur = 1, maxLen = 1;
    for (int i = 1; i < n; i++) {
        if (arr[i] >= arr[i - 1]) cur++;
        else cur = 1;
        if (cur > maxLen) maxLen = cur;
    }

    cout << maxLen;
    return 0;
}
