#include <bits/stdc++.h>

using namespace std;

int main() {
    int n;
    cin >> n;

    vector<int> arr(n);
    for (int i = 0; i < n; i++) cin >> arr[i];

    int maxIdx = 0, minIdx = 0;
    int maxVal = arr[0], minVal = arr[0];

    for (int i = 0; i < n; i++) {
        if (arr[i] > maxVal)
{ maxVal = arr[i]; maxIdx = i; }
        if (arr[i] <= minVal)
{ minVal = arr[i]; minIdx = i; }
    }

    int moves = maxIdx + (n - 1 - minIdx);
    if (maxIdx > minIdx)
moves--; 

    cout << moves;
    return 0;
}
