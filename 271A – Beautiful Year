#include <bits/stdc++.h>
using namespace std;

bool uniqueDigits(int year){
    string s = to_string(year);
    sort(s.begin(), s.end());
    return unique(s.begin(), s.end()) == s.end();
}

int main() {
    int y;
    cin >> y;
    y++;
    while(!uniqueDigits(y)) y++;
    cout << y;
    return 0;
}
